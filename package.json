{
  "name": "color-studio",
  "version": "2.0.0.rc-0",
  "license": "GPL-2.0+",
  "repository": {
    "type": "git",
    "url": "https://github.com/automattic/color-studio.git"
  },
  "main": "dist/colors.json",
  "style": "dist/color-variables.scss",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@skpm/builder": "^0.7.0",
    "autoprefixer": "^9.6.0",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.0.0",
    "chroma-js": "^2.0.3",
    "colorbox": "Automattic/colorbox",
    "concurrently": "^4.1.0",
    "copy-text-to-clipboard": "^2.1.0",
    "css-loader": "^2.1.1",
    "easy-table": "^1.1.1",
    "file-saver": "^2.0.0-rc.4",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lodash": "^4.17.5",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^4.8.3",
    "onchange": "^6.0.0",
    "postcss-css-variables": "^0.12.0",
    "postcss-loader": "^3.0.0",
    "puppeteer": "^1.10.0",
    "raw-loader": "^3.0.0",
    "rename-webpack-plugin": "^2.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "svgo": "^1.2.2",
    "url-loader": "^1.1.2",
    "webpack": "^4.33.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.6.0",
    "webpack-extraneous-file-cleanup-plugin": "^2.0.0",
    "xo": "^0.24.0"
  },
  "engines": {
    "node": "^10.15.2"
  },
  "scripts": {
    "build": "yarn palette:build && yarn docs:build --silent && yarn sketch:build --quiet && yarn meta:build",
    "calypso": "yarn calypso:clone && yarn calypso:reset && yarn calypso:pull && yarn calypso:install",
    "calypso:clone": "git clone -b master --single-branch https://github.com/Automattic/wp-calypso .cache/calypso || true",
    "calypso:install": "npm --prefix .cache/calypso install",
    "calypso:pull": "git -C .cache/calypso pull origin master",
    "calypso:reset": "git -C .cache/calypso reset --hard origin/master",
    "docs": "yarn docs:build",
    "docs:build": "webpack",
    "docs:watch": "concurrently \"yarn palette:watch\" \"sleep 3 && webpack-dev-server\"",
    "info": "yarn info:material-elevation",
    "info:material-elevation": "node info/material-elevation",
    "lint": "xo",
    "meta": "yarn meta:build",
    "meta:build": "yarn meta:build:preview",
    "meta:build:preview": "node builders/preview-from-docs",
    "palette": "yarn palette:build",
    "palette:build": "yarn palette:build:json && yarn palette:test && yarn palette:build:android && yarn palette:build:css && yarn palette:build:ios && yarn palette:build:sketch",
    "palette:build:android": "node builders/android-xml-from-json > dist/android/muriel-color-palette.xml",
    "palette:build:css": "yarn palette:build:css:classes && yarn palette:build:css:fills && yarn palette:build:css:properties && yarn palette:build:css:variables",
    "palette:build:css:classes": "node builders/css-classes-from-json > dist/color-classes.css",
    "palette:build:css:fills": "node builders/css-fills-from-json > dist/color-fills.css",
    "palette:build:css:properties": "node builders/css-properties-from-json > dist/color-properties.css",
    "palette:build:css:variables": "node builders/scss-variables-from-json > dist/color-variables.scss",
    "palette:build:ios": "node builders/ios-assets-from-json",
    "palette:build:json": "node builders/json > dist/colors.json",
    "palette:build:sketch": "node builders/sketchpalette-from-json > dist/colors.sketchpalette",
    "palette:build:web": "yarn palette:build:json && yarn palette:build:css",
    "palette:test": "jest test/palette.test.js",
    "palette:watch": "yarn palette:build:web && onchange builders/json.js data/base-colors.json -- yarn palette:build:web",
    "postinstall": "echo \"Please run ‘yarn calypso’ if you haven’t.\"",
    "precommit": "yarn lint && yarn build && git add --update",
    "sketch": "yarn sketch:build && skpm-link",
    "sketch:build": "skpm-build",
    "sketch:watch": "skpm-build --watch",
    "svgo": "svgo --config=svgo.config.json",
    "svgo:docs": "yarn svgo --folder docs-source --recursive",
    "test": "jest --all"
  },
  "skpm": {
    "manifest": "extensions/sketch/manifest.json",
    "main": "dist/extensions/color-studio.sketchplugin"
  },
  "xo": {
    "ignores": [
      ".cache/**/*.js",
      "**/assets/*.js"
    ],
    "esnext": true,
    "space": true,
    "semicolon": false,
    "rules": {
      "array-bracket-newline": [
        "off"
      ],
      "array-callback-return": [
        "off"
      ],
      "capitalized-comments": [
        "off"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "key-spacing": [
        "off"
      ],
      "max-params": [
        "off"
      ],
      "no-await-in-loop": [
        "off"
      ],
      "no-mixed-operators": [
        "off"
      ],
      "no-multi-spaces": [
        "off"
      ],
      "no-negated-condition": [
        "off"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "prefer-object-spread": [
        "off"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "unicorn/prefer-spread": [
        "off"
      ]
    },
    "overrides": [
      {
        "files": [
          "docs-source/**/*.js"
        ],
        "env": [
          "browser"
        ]
      },
      {
        "files": [
          "**/*.test.js"
        ],
        "globals": [
          "expect",
          "describe",
          "test"
        ],
        "rules": {
          "dot-notation": [
            "off"
          ]
        }
      }
    ]
  }
}
